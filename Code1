#include <iostream>//Ulduz piramida
using namespace std;

int main() {
    char a = '*';
    char b = ' ';
    int c;
    cout << "Setirlerin sayi: ";
    cin >> c;
    for(int i = 1; i <= c; i++){
        for(int k = i; k < c; k++){
        cout << " ";
        }
        for(int j = 1; j <= 2*i - 1; j++){
            cout << "*";
        }
        cout << endl;
    }
    return 0;
}
